                            "postcss":  "^8.5.6",
                            "prettier":  "^3.6.2",
                            "tailwindcss":  "^4.1.12",
                            "vite":  "^7.1.2",
                            "vitest":  "^3.2.4"
                        },
    "engines":  {
                    "node":  "\u003e=20"
                },
    "lint-staged":  {
                        "**/*.{js,jsx,ts,tsx,json,css,md}":  "prettier --write",
                        "**/*.{js,jsx,ts,tsx}":  [
                                                     "eslint --fix",
                                                     "vitest --run --passWithNoTests --reporter=dot --coverage=false"
                                                 ]
                    }
