    "version":  "0.0.0",
    "type":  "module",
    "scripts":  {
                    "dev":  "vite",
                    "build":  "vite build",
                    "lint":  "eslint . --ext .js,.jsx,.ts,.tsx",
                    "preview":  "vite preview",
                    "predeploy":  "npm run build",
